<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginRegisterActivity"
    >


    <LinearLayout

        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:gravity="bottom"
        android:foregroundGravity=""
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <Button
                android:id="@+id/bt_login"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_red"
                android:onClick="onClickLogin"
                android:text="Anmelden"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/bt_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_white"
                android:onClick="onClickRegsiter"
                android:text="Registrieren"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weiter ohne Login"
                android:textColor="@drawable/text_onclick"
                android:layout_marginTop="15dp"
                android:onClick="onClickGuest"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>