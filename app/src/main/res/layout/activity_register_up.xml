<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login_Register.RegisterUPActivity"
    android:background="@drawable/gradient">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:text="Konto erstellen"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@android:color/white"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_gravity="left"
                    android:id="@+id/et_usernameInput"
                    android:layout_width="300dp"
                    android:layout_height="33dp"
                    android:singleLine="true"
                    android:background="@drawable/text_input"
                    android:textColor="#646a72"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tv_usernameDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dieser Name wird später fürs Anmelden verwendet"
                    android:lines="2"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passwort"
                    android:textColor="@android:color/white"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_gravity="left"
                    android:id="@+id/et_passwordInput"
                    android:layout_width="300dp"
                    android:layout_height="33dp"
                    android:singleLine="true"
                    android:background="@drawable/text_input"
                    android:textColor="#646a72"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tv_passwordDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mindestend 8 Zeichen"
                    android:lines="2"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">

        <Button

            android:id="@+id/bt_toUserData"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_red"
            android:onClick="onClickUserData"
            android:text="Weiter"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>