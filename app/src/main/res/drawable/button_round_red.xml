<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <corners android:radius="70dip" />
            <stroke android:width="3dip" android:color="@color/colorAccent" />
            <solid android:color="@color/colorAccent"></solid>
            <padding android:left="40dp"/>
            <padding android:right="40dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="70dip" />
        <solid android:color="#ed6361"></solid>
        <padding android:left="38dp"/>
        <padding android:right="38dp"/>
    </shape>
</item>
</selector>